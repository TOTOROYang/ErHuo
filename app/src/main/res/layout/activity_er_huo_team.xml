<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_erhuo"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="@string/str_about_team" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white_transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_team_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar_team" />

            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar"
                android:text="TotoroYang"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_team_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team_name"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar"
                android:text="Android端开发"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_team_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team_work"
                android:layout_margin="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar"
                android:text="E-mail:yzw5535@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white_transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_team_avatar2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar_team2" />

            <TextView
                android:id="@+id/tv_team_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar2"
                android:text="Cifer"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_team_work2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team_name2"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar2"
                android:text="服务端开发"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_team_email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team_work2"
                android:layout_margin="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar2"
                android:text="E-mail:nigolot@163.com"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white_transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_team_avatar3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar_team3" />

            <TextView
                android:id="@+id/tv_team_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar3"
                android:text="喵YUKI酱"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_team_work3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team_name3"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar3"
                android:text="UI设计"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_team_email3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team_work3"
                android:layout_margin="11dp"
                android:layout_toEndOf="@+id/iv_team_avatar3"
                android:text="E-mail:583614527@qq.com"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
